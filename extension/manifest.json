{
  "name": "DevBug",
  "version": "0.0.0",
  "description": "Open source browser design tools",
  "manifest_version": 2,
  "icons": { "128": "icons/visbug-dev.png" },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "visbug.js",
      "contextmenu/launcher.js",
      "contextmenu/viewmode.js",
      "contextmenu/colormode.js",
      "contextmenu/colorscheme.js"
    ]
  },
  "browser_action": {
    "default_title": "Click or press Alt+Shift+D to launch DevBug",
    "default_icon": {
      "128": "icons/visbug-dev.png"
    }
  },
  "web_accessible_resources": [
    "tuts/*",
    "toolbar/*"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+D",
        "mac": "Alt+Shift+D",
        "chromeos": "Alt+Shift+D",
        "linux": "Alt+Shift+D"
      }
    }
  }
}
