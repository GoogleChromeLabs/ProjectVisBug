{
  "name": "VisBug",
  "version": "0.2.0",
  "description": "Open source browser design tools",
  "manifest_version": 2,
  "icons": { "128": "icons/visbug.png" },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "pixelbug.js"
    ]
  },
  "browser_action": {
    "default_title": "VisBug",
    "default_icon": {
      "128": "icons/visbug.png"
    }
  },
  "web_accessible_resources": [
    "tuts/*"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+D",
        "mac": "Alt+Shift+D",
        "chromeos": "Alt+Shift+D",
        "linux": "Alt+Shift+D"
      }
    }
  }
}
