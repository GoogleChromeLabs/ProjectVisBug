{
  "name": "VisBug",
  "version": "0.1.14",
  "description": "Open source browser design tools",
  "manifest_version": 2,
  "icons": { "128": "icons/visbug.png" },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "pixelbug.js"
    ]
  },
  "browser_action": {
    "default_title": "VisBug",
    "default_icon": {
      "128": "icons/visbug.png"
    }
  },
  "web_accessible_resources": [
    "tuts/accessibility.gif",
    "tuts/align.gif",
    "tuts/boxshadow.gif",
    "tuts/font.gif",
    "tuts/guides.gif",
    "tuts/hueshift.gif",
    "tuts/inspector.gif",
    "tuts/margin.gif",
    "tuts/move.gif",
    "tuts/padding.gif",
    "tuts/position.gif",
    "tuts/search.gif",
    "tuts/text.gif"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+D",
        "mac": "Alt+Shift+D",
        "chromeos": "Alt+Shift+D",
        "linux": "Alt+Shift+D"
      }
    }
  }
}